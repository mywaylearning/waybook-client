{
  "name": "waybook-client",
  "version": "1.0.0",
  "description": "Waybook: An Ionic project",
  "browser": {
    "ionic": "./www/lib/ionic/js/ionic.min.js",
    "ionic-angular": "./www/lib/ionic/js/ionic-angular.min.js",
    "angular": "./www/lib/angular/angular.min.js",
    "angular-animate": "./www/lib/angular-animate/angular-animate.min.js",
    "angular-sanitize": "./www/lib/angular-sanitize/angular-sanitize.min.js",
    "angular-ui-router": "./www/lib/angular-ui-router/release/angular-ui-router.min.js",
    "restangular": "./node_modules/restangular/dist/restangular.min.js",
    "lodash": "./www/app/components/lodash.custom.min.js",
    "moment": "./node_modules/moment/min/moment.min.js",
    "store": "./node_modules/store/store.min.js"
  },
  "browserify-shim": {
    "lodash": "_",
    "debug": "debug",
    "moment": "Moment",
    "ionic": "ionic",
    "angular": {
      "exports": "angular"
    },
    "angular-animate": {
      "depends": "angular"
    },
    "angular-sanitize": {
      "depends": "angular"
    },
    "angular-ui-router": {
      "depends": "angular"
    },
    "restangular": {
      "depends": "lodash:_"
    }
  },
  "browserify": {
    "transform": [
      "debowerify",
      "browserify-shim",
      [
        "localenvify",
        {
          "envfile": ".env.local"
        }
      ],
      [
        "localenvify",
        {
          "envfile": ".env"
        }
      ],
      [
        "browserify-ngannotate",
        {
          "add": true,
          "single_quotes": true
        }
      ],
      "brfs",
      [
        "uglifyify",
        {
          "mangle": false,
          "compress": {
            "sequences": true,
            "dead_code": true,
            "angular": true
          },
          "ignore": [
            "**/www/lib/*",
            "**/node_modules/*",
            "./www/app/components/lodash.custom.min.js"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "debug": "^2.2.0",
    "moment": "^2.10.3",
    "restangular": "^1.5.1",
    "store": "^1.3.17"
  },
  "devDependencies": {
    "bower": "^1.3.3",
    "brfs": "^1.4.0",
    "browserify": "^9.0.8",
    "browserify-ngannotate": "^0.7.1",
    "browserify-shim": "^3.8.3",
    "debowerify": "^1.2.0",
    "localenvify": "^1.0.1",
    "lodash-cli": "^3.6.0",
    "shelljs": "^0.3.0",
    "uglifyify": "^3.0.1"
  },
  "scripts": {
    "deploy:dev": "aws s3 sync www/ s3://uidev.way.me --delete --acl public-read --profile way",
    "build-js:dev": "browserify www/app/app.js --debug | exorcist www/app/waybook-min.js.map > www/app/waybook-min.js",
    "build-styles:dev": "node-sass --precision 10 --linefeed cr --output-style compressed --source-map www/css/waybook.css.map scss/ionic.app.scss www/css/waybook.css && autoprefixer www/css/waybook.css",
    "build-lodash": "grep -o -C 0 '_\\.[^(]*' node_modules/restangular/src/restangular.js | sort -u | sed -e 's/_\\.//' | paste -d, -s - | xargs -I\"{}\" -t lodash -s -o www/app/components/lodash.custom.min.js -p include={}",
    "serve": "ionic serve"
  }
}
