{
  "name": "waybook-client",
  "version": "1.0.0",
  "description": "Waybook: An Ionic project",
  "browser": {
    "ionic": "./www/lib/ionic/js/ionic.js",
    "ionic-angular": "./www/lib/ionic/js/ionic-angular.js",
    "angular": "./www/lib/angular/angular.js",
    "angular-animate": "./www/lib/angular-animate/angular-animate.js",
    "angular-sanitize": "./www/lib/angular-sanitize/angular-sanitize.js",
    "angular-ui-router": "./www/lib/angular-ui-router/release/angular-ui-router.js",
    "restangular": "./www/lib/restangular/dist/restangular.js",
    "lodash": "./www/app/components/lodash.custom.min.js",
    "moment": "./www/lib/moment/moment.js",
    "store": "./node_modules/store/store.min.js",
    "angular-schema-form": "./www/lib/angular-schema-form/dist/schema-form.js",
    "ObjectPath": "./www/lib/objectpath/lib/ObjectPath.js",
    "tv4": "./www/lib/tv4/tv4.js",
    "angular-gravatar": "./www/lib/angular-gravatar/build/angular-gravatar.js",
    "ionic-ion-showWhen": "./www/lib/ionic-ion-showWhen/index.js",
    "ion-wizard": "./www/lib/ion-wizard/index.js"
  },
  "browserify-shim": {
    "angular": "angular",
    "angular-sanitize": {
      "depends": "angular"
    },
    "ObjectPath": "ObjectPath",
    "tv4": "tv4",
    "lodash": "_",
    "restangular": {
      "depends": "lodash:_"
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      [
        "localenvify",
        {
          "envfile": ".env.local"
        }
      ],
      [
        "localenvify",
        {
          "envfile": ".env"
        }
      ],
      [
        "uglifyify",
        {
          "mangle": false,
          "compress": {
            "sequences": true,
            "dead_code": true,
            "angular": true
          },
          "ignore": [
            "**/www/lib/*",
            "**/node_modules/*",
            "./www/app/components/lodash.custom.min.js"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "debug": "^2.2.0",
    "store": "^1.3.17"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^10.2.1",
    "browserify-shim": "^3.8.7",
    "js-beautify": "^1.5.6",
    "localenvify": "^1.0.1",
    "lodash-cli": "^3.9.1",
    "node-sass": "^3.1.1",
    "shelljs": "^0.5.0",
    "uglifyify": "^3.0.1"
  },
  "scripts": {
    "deploy:dev": "aws s3 sync www/ s3://uidev.way.me --delete --acl public-read --profile way",
    "build-vendor-js": "",
    "build-js:dev": "BROWSERIFYSHIM_DIAGNOSTICS=1 browserify www/app/app.js --debug | exorcist www/app/waybook-min.js.map > www/app/waybook-min.js",
    "build-styles:dev": "node-sass --precision 10 --linefeed cr --output-style compressed --source-map www/css/waybook.css.map scss/ionic.app.scss www/css/waybook.css && autoprefixer www/css/waybook.css",
    "build-lodash": "grep -o -C 0 '_\\.[^(]*' www/lib/restangular/dist/restangular.js | sort -u | sed -e 's/_\\.//' | paste -d, -s - | xargs -I\"{}\" -t lodash -s -o www/app/components/lodash.custom.min.js -p include={}",
    "serve": "ionic serve"
  }
}
